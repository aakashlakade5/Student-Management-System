<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Student</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
  <%- include('../partials/navbar') %>

  <section class="vh-100" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow" style="border-radius: 20px;">
            <div class="card-body p-4">
              <h3 class="text-center fw-bold mb-4">üë§ Student Details</h3>

              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <strong>Student ID:</strong> <%= student.studentId %>
                </li>
                <li class="list-group-item">
                  <strong>Name:</strong> <%= student.name %>
                </li>
                <li class="list-group-item">
                  <strong>Class:</strong> <%= student.schClass %>
                </li>
                <li class="list-group-item">
                  <strong>Section:</strong> <%= student.section %>
                </li>
                <li class="list-group-item">
                  <strong>Contact:</strong> <%= student.contact %>
                </li>
                <li class="list-group-item">
                  <strong>Subjects & Marks:</strong><br/>
                  <% student.subjects.forEach(sub => { %>
                    <span class="badge bg-light text-dark me-2 mb-2 d-inline-block">
                      <strong><%= sub.subjectName %></strong>: <%= sub.marks %>
                    </span><br/>
                  <% }) %>
                </li>
              </ul>

              <div class="text-center mt-4">
                <a href="/update-student/<%= student._id %>" class="btn btn-warning me-2">Update</a>
                <a href="/delete-student/<%= student._id %>" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
              </div>

              
              <div class="text-center mt-3">
                <button onclick="window.history.back()" class="btn btn-outline-secondary">‚Üê Go Back</button>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('../partials/footer') %>
</body>
</html>
