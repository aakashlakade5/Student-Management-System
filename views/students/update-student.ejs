</head>

<body>
    <%- include('../partials/navbar') %>
        <section class="vh-100" style="background-color: #eee;">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="card-body p-md-5">
                                <h3 class="text-center fw-bold mb-4">âž• Update Student</h3>

                                <form action="/update-student/<%= student._id %>" method="POST">
                                    <div class="row mb-4">
                        
                                            <!-- <div class="col-md-6">
                                                <label for="studentId" class="form-label fw-bold">Student ID</label>
                                                <input type="text" id="studentId" name="studentId" value="" class="form-control"
                                                    required />
                                            </div> -->
                                            <div class="col-md-6">
                                                <label for="name" class="form-label fw-bold">Name</label>
                                                <input type="text" id="name" name="name" value="<%= student.name %>" class="form-control"
                                                    required />
                                            </div>
                                            <div class="col-md-6">
                                                <label for="schClass" class="form-label fw-bold">Class</label>
                                                <input type="text" id="schClass" name="schClass" value="<%= student.schClass %>" class="form-control"
                                                    required />
                                            </div>

                                            <div class="col-md-6">
                                                <label for="section" class="form-label fw-bold">Section</label>
                                                <input type="text" id="section" name="section" value="<%= student.section %>" class="form-control"
                                                    required />
                                            </div>
                                    </div>subjectsScience

                                    <h5 class="fw-bold mb-3">ðŸ“š Subject Marks</h5>
                                    <div class="row mb-3">
                                     <% student.subjects.forEach(sub => { %>
                                      
                                        <div class="col-md-4">
                                            <label for="<%= sub.subjectName %>" class="form-label"><%= sub.subjectName %></label>
                                            <input type="number" id="<%= sub.subjectName %>" name="<%= `marks${sub.subjectName}`%>" value="<%= sub.marks %>"
                                                class="form-control" required />
                                        </div>
                                 
                                        <% }) %>
                                    </div>
                            
                                        <div class="text-center mt-4">
                                            <button type="submit" class="btn btn-primary px-5">Submit</button>
                                            <button onclick="window.history.back()" class="btn btn-outline-secondary"> Cancel</button>
                                        </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('../partials/footer') %>
</body>

</html>